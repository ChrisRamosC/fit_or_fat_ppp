<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fit_or_fat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/verde_fit</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/CustomFont</item>
        <item name="android:windowBackground">@color/background_color</item>

    </style>

    <style name="Theme.font" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textAppearance">@style/CustomFont</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/verde_fit</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlActivated">#D0FD3E</item>
        <item name="colorControlNormal">#2C2C2E</item>
    </style>

    <style name="CustomTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>