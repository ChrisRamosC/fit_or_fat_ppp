<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919"
        tools:context="com.gruponiche.fit_or_fat.ui.Verificacion_codigo">

    <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/ic_baseline_chevron_left_24"
            android:id="@+id/flechaAtrasRecuperarContrasena"
            android:background="#2C2C2E" android:tint="#E5E5E5"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.043"/>

    <TextView
            style="@style/CustomFont"
            android:text="Verificación de código"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/flechaAtrasRecuperarContrasena" android:textColor="@color/white"/>
    <TextView

            style="@style/CustomFont"
            android:text="A continuación, ingrese el código enviado a su buzón de correo.Si no lo encuentra prueba a buscarlo en la sección de spam."
            android:layout_width="380dp"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.612" android:textColor="#D7FFFFFF"/>

    <LinearLayout
            android:id="@+id/linearLayoutCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            android:layout_marginTop="64dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0">

        <EditText
                android:id="@+id/inputCode1"

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"

                tools:ignore="SpeakableTextPresentCheck"/>

        <EditText

                android:id="@+id/inputCode2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>

        <EditText
                android:id="@+id/inputCode3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>

        <EditText
                android:id="@+id/inputCode4"


                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"

                tools:ignore="SpeakableTextPresentCheck"/>
        <EditText
                android:id="@+id/inputCode5"


                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"
                tools:ignore="SpeakableTextPresentCheck"/>
        <EditText
                android:id="@+id/inputCode6"


                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                android:textSize="24dp"
                android:textStyle="bold"

                tools:ignore="SpeakableTextPresentCheck"/>
    </LinearLayout>

    <Button
            android:text="Validar"
            android:id="@+id/btnValidarCodigoVerificacion"
            android:backgroundTint="#D0FD3E"
            android:background="@drawable/estilo_boton"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutCodigo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>