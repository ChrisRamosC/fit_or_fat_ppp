<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context="com.gruponiche.fit_or_fat.ui.Nivel">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        android:id="@+id/flechaAtrasMetricas"
        android:background="#2C2C2E" android:tint="#E5E5E5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.509"/>

    <TextView
        style="@style/CustomFont"
        android:text="¿CÚAL ES TU NIVEL DE ACTIVIDAD?"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" android:layout_marginEnd="72dp"/>
    <RadioGroup
        android:id="@+id/rdActividad"
        android:layout_width="375dp"
        android:layout_height="506dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.50" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp">


        <RadioButton
            android:checked="true"
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonActividad1"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Sedentario"
            android:drawableRight="@drawable/ic_no_hago_nada_de_ejercicio_"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />

        <RadioButton
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonActividad2"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Actividad\nligera"
            android:drawableRight="@drawable/ic_a_veces_hago_ejercicio"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />

        <RadioButton
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonActividad3"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Moderadamente\nactiva"
            android:drawableRight="@drawable/ic_entreno_una_hora_o_m_s_cada_d_a"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />
        <RadioButton
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonActividad4"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Muy activa"
            android:drawableRight="@drawable/ic_me_encanta_entrenar_y_deseo_m_s_ejercicios"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />


    </RadioGroup>
    <Button
        android:background="@drawable/estilo_boton"
        android:id="@+id/btnSiguienteObjetivo"
        android:drawableRight="@drawable/ic_chevron_right"
        android:text="Siguiente"
        android:backgroundTint="#D0FD3E"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/rdActividad" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>