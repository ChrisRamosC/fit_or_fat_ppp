<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919"
        tools:context="com.enanitosverdes.fit_or_fat.com.gruponiche.fit_or_fat.ui.Terminos">


    <TextView
            style="@style/CustomFont"
            android:text="TÉRMINOS Y CONDICIONES"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"

            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintHorizontal_bias="0.59"/>
    <TextView
            style="@style/CustomFont"
            android:textStyle="bold"
            android:text="Términos generales"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"

            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.059"/>
    <TextView
            android:text="El equipo de Fit or Fat no será responsable de ningún resultado que pueda ocurrir durante el curso del uso de nuestros recursos. Nos reservamos el derecho de cambiar los precios y revisar la política de uso de recursos en cualquier momento."
            android:textColor="#B5B5B5"
            android:textSize="16sp"
            android:layout_width="344dp"
            android:layout_height="128dp" android:id="@+id/textView3"

            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"/>
    <Button
            android:background="@drawable/estilo_boton"
            android:text="Aceptar"
            android:backgroundTint="#D0FD3E"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="123dp"
            android:layout_height="49dp" android:id="@+id/buttonAceptarTerminos"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:cornerRadius="21.5dp"/>
    <Button
            android:text="Rechazar"
            android:background="@drawable/estilo_boton"
            android:backgroundTint="#2C2C2E"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="123dp"
            android:layout_height="49dp" android:id="@+id/btnRechazarTerminos"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/buttonAceptarTerminos"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:cornerRadius="21.5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>