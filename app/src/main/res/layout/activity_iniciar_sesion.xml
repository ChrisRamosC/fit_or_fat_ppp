<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919"
        tools:context="com.enanitosverdes.fit_or_fat.com.gruponiche.fit_or_fat.ui.Iniciar_sesion">


    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="238dp" app:srcCompat="@drawable/inicio_sesion" android:id="@+id/imagenCrearCuenta"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:circularflow_angles="22"
            android:foreground="@drawable/ic_polygon_3" android:foregroundTint="#191919"
            android:layout_marginTop="4dp"
            android:foregroundGravity="bottom|center_vertical|center"/>
    <EditText
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:hint="@string/correo"
            android:ems="10"
            android:id="@+id/editEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.506"
           android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imagenCrearCuenta"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:id="@+id/editPassword"
            app:endIconMode="password_toggle"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"
            app:layout_constraintEnd_toEndOf="parent" android:textColorHint="@color/white">>
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:id="@+id/textInputPassword"
                android:textColor="@color/white" android:textColorLink="#D0FD3E" android:textColorHighlight="#D0FD3E"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btnIniciarSesion"
            android:drawableRight="@drawable/ic_chevron_right"
            android:text="Iniciar Sesión"
            android:backgroundTint="#D0FD3E"
            android:background="@drawable/estilo_boton"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="165dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"

            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/editPassword"/>
    <TextView
            android:text="¿Primera vez en Fit or Fat?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIniciarSesion" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/white"/>
    <TextView
            android:text="INICIA SESIÓN"
            style="@style/CustomFont"
            android:textSize="45dp"
            android:layout_width="210dp"
            android:layout_height="107dp" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.203" android:textColor="#D0FD3E"/>
    <TextView
            style="@style/CustomFont"
            android:text="Entrena y vive la nueva experiencia de hacer ejercicio en casa"
            android:textSize="15dp"
            android:layout_width="240dp"
            android:layout_height="35dp" android:id="@+id/textView10"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.148"
            android:textColor="@color/white"/>
    <TextView
            android:text="Crea una cuenta ya"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textCrearCuenta"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#D0FD3E"/>
    <TextView

            android:text="Olvidé mi contraseña"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/olvideContrasena"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editPassword"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.857" android:textColor="#D0FD3E"/>


</androidx.constraintlayout.widget.ConstraintLayout>