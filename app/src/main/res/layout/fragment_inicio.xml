<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#191919"
    tools:context="com.gruponiche.fit_or_fat.ui.InicioFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView15"
                style="@style/texto_blanco_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:text="Objetivo Semanal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="59dp"
                android:layout_height="28dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="25dp"
                android:text="Ninguno"
                android:textAlignment="viewEnd"
                android:textColor="#D0FD3E"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="99dp"
                android:layout_height="29dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="25dp"
                android:text="Ver Todo..."
                android:textAlignment="viewEnd"
                android:textColor="#D0FD3E"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="99dp"
                android:layout_height="29dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="25dp"
                android:text="Ver Todo..."
                android:textAlignment="viewEnd"
                android:textColor="#D0FD3E"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hhorizontalScrollView" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="8dp"
                android:background="#191919"
                android:src="@drawable/card_objetivo_semanal_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.604"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15"
                app:layout_constraintVertical_bias="0.01"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/textView17"
                style="@style/texto_blanco_16"
                android:layout_width="90dp"
                android:layout_height="34dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="282dp"
                android:layout_marginBottom="309dp"
                android:text="Categorías"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2"
                app:layout_constraintVertical_bias="0.0" />

            <RadioGroup
                android:id="@+id/radioGroupCategorias"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/boton_grisfit"
                android:orientation="horizontal"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17">

                <RadioButton
                    android:id="@+id/btnSemana"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/radio_selector_inicio_categorias"
                    android:button="@android:color/transparent"
                    android:checked="true"
                    android:text="Principiante"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_selector_text_visualizar_estadisticas" />

                <RadioButton
                    android:id="@+id/btnMes"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/radio_selector_inicio_categorias"
                    android:button="@android:color/transparent"
                    android:text="Intermedio"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_selector_text_visualizar_estadisticas" />

                <RadioButton
                    android:id="@+id/btnAnio"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/radio_selector_inicio_categorias"
                    android:button="@android:color/transparent"
                    android:text="Avanzado"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_selector_text_visualizar_estadisticas" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView14"
                style="@style/texto_blanco_16"
                android:layout_width="198dp"
                android:layout_height="27dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="194dp"
                android:text="Grupo Muscular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hhorizontalScrollView" />

            <LinearLayout
                android:id="@+id/hhorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioGroupCategorias">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="205dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerGrupoMuscular"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="146dp"
                android:layout_height="15dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:text="Buenos días."
                android:textColor="#FFFFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

