<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919"
        tools:context="com.gruponiche.fit_or_fat.ui.Restablecer_contrasena">
    <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/circleImageView"
            app:srcCompat="@drawable/ic_baseline_chevron_left_24"
            android:id="@+id/flechaAtrasVerificacion"
            android:background="#2C2C2E" android:tint="#E5E5E5"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.043"/>

    <TextView
            style="@style/CustomFont"
            android:text="Recuperar contraseña"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.087" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/flechaAtrasVerificacion" android:textColor="@color/white"/>
    <TextView
            style="@style/CustomFont"
            android:text="Ingrese una nueva contraseña, esta vez asegúrese de que esté a su alcance y que sea fácil de recordar."
            android:layout_width="380dp"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:layout_constraintHorizontal_bias="0.612" android:textColor="#D7FFFFFF"/>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:id="@+id/editTextTextPasswordRecuperar"
            app:endIconMode="password_toggle"
            android:backgroundTint="#2C2C2E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColorHint="@color/white"
            app:layout_constraintHorizontal_bias="0.493" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView13">>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recuperarEditPassoword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:backgroundTint="#2C2C2E"

                android:textColor="@color/white" android:textColorLink="#2C2C2E" android:textColorHighlight="#D0FD3E"
        />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:id="@+id/editTextTextPasswordConfirmarRecuperar"
            app:endIconMode="password_toggle"
            android:backgroundTint="#2C2C2E"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.493"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordRecuperar"
            android:textColorHint="@color/white">>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/recupearEditPassowordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirma tu contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/white"
                android:backgroundTint="#2D2C2E"

        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Cambiar Contraseña"
            android:id="@+id/btnAceptarCambiarContrasena"
            android:backgroundTint="#D0FD3E"
            android:background="@drawable/estilo_boton"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPasswordConfirmarRecuperar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>