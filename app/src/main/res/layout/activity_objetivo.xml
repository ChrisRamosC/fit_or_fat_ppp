<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context="com.gruponiche.fit_or_fat.ui.Objetivo">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        android:id="@+id/flechaAtrasNivel"
        android:background="#2C2C2E" android:tint="#E5E5E5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.533"/>

    <TextView
        style="@style/CustomFont"
        android:text="CUÉNTANOS SOBRE TU OBJETIVO"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" android:layout_marginEnd="64dp"/>
    <RadioGroup
        android:id="@+id/radioGroupObjetivo"
        android:layout_width="378dp"
        android:layout_height="454dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.50" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp">


        <RadioButton
            android:checked="true"
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonObjetivo1"
            android:textColor="@drawable/genero_text_selector"

            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Perder Peso"
            android:drawableRight="@drawable/perder_peso"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />

        <RadioButton
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonObjetivo2"
            android:textColor="@drawable/genero_text_selector"

            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Aumentar\nmúsculo"
            android:drawableRight="@drawable/aumentarmusculo"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />

        <RadioButton
            android:padding="15dp"
            android:textSize="20dp"
            android:id="@+id/radioButtonObjetivo3"
            android:textColor="@drawable/genero_text_selector"
            android:background="@drawable/background_selector"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:text="Mantenerme en\nforma"
            android:drawableRight="@drawable/mantenerme_en_forma"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            />


    </RadioGroup>
    <Button
        android:background="@drawable/estilo_boton"
        android:id="@+id/GuardarDatosUsuario"
        android:text="Guardar"
        android:backgroundTint="#D0FD3E"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupObjetivo" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.498"/>


</androidx.constraintlayout.widget.ConstraintLayout>