<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#191919"
        tools:context="com.enanitosverdes.fit_or_fat.com.gruponiche.fit_or_fat.ui.Crear_cuenta">

    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="209dp" app:srcCompat="@drawable/crear" android:id="@+id/imagenCrearCuenta"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:circularflow_angles="22"
            android:foreground="@drawable/ic_polygon_3" android:foregroundTint="#191919"
            android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.503" android:foregroundGravity="bottom|center_vertical|center"/>
    <EditText
            android:layout_width="331dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:hint="@string/nombre_completo"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/imagenCrearCuenta" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColorHint="@color/white"
            app:layout_constraintHorizontal_bias="0.526"/>
    <EditText

            android:layout_width="331dp"
            android:layout_height="60dp"
            android:textColorHint="@color/white"
            android:hint="@string/telefono"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPhone"  android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            />


    <EditText
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"
            android:hint="@string/correo"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhone" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.506"
           />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="60dp"

            android:id="@+id/editTextTextPassword"
            app:endIconMode="password_toggle"

            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            app:layout_constraintEnd_toEndOf="parent" android:textColorHint="@color/white">>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/crearEditPassoword"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/white"

                android:textColor="@color/white" android:textColorLink="#2C2C2E" android:textColorHighlight="#2C2C2E"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:id="@+id/editTextTextPassword2"
            app:endIconMode="password_toggle"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.52"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
            android:textColorHint="@color/white">>
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/crearEditPassowordConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirma tu contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/white"


        />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
            android:id="@+id/btnCrearCuenta"
            android:drawableRight="@drawable/ic_chevron_right"
            android:text="Crear Cuenta"
            android:backgroundTint="#D0FD3E"
            android:background="@drawable/estilo_boton"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_width="165dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="13dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword2"/>
    <TextView
            android:text="¿Ya tienes una cuenta?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/btnCrearCuenta" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@android:color/white"/>
    <TextView
            android:text="CREA TU CUENTA"
         style="@style/CustomFont"
            android:textSize="45dp"
            android:layout_width="210dp"
            android:layout_height="107dp" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.203" android:textColor="#D0FD3E"/>
    <TextView
            style="@style/CustomFont"
            android:text="Por favor, ingrese sus datos"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.148"
            android:textColor="@color/white"/>
    <TextView
            android:text="Iniciar Sesión"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textIniciarSesion"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="#D0FD3E"/>


</androidx.constraintlayout.widget.ConstraintLayout>