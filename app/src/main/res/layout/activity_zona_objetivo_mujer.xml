<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context="com.enanitosverdes.fit_or_fat.com.gruponiche.fit_or_fat.ui.ZonaObjetivoMujer">


    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/ic_baseline_chevron_left_24"
        android:id="@+id/flechaAtrasDatosPersonales"
        android:background="#2C2C2E" android:tint="#E5E5E5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView4" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.509"/>
    <TextView
        style="@style/CustomFont"
        android:text="ELIGE TU ZONA OBJETIVO"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" android:layout_marginEnd="140dp"/>
    <RadioGroup
        android:id="@+id/rdZonaMujer"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="366dp"
        android:layout_marginTop="72dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.113">
        <RadioButton
            android:id="@+id/rbTodoCuerpoHombre"
            android:textSize="12dp"
            android:padding="0dp"
            android:checked="true"
            android:background="@drawable/background_selector"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:text="Todo el cuerpo"
            android:layout_marginBottom="20dp"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <RadioButton
            android:id="@+id/rbBrazoMujer"
            android:checked="false"
            android:padding="0dp"
            android:textSize="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/background_selector"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:text="Brazo"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <RadioButton
            android:id="@+id/rbAbdominalesMujer"
            android:checked="false"
            android:padding="0dp"
            android:textSize="12dp"
            android:background="@drawable/background_selector"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:text="Abdominales"
            android:layout_marginBottom="20dp"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"/>

        <RadioButton
            android:id="@+id/rbGluteosMujer"
            android:checked="false"
            android:padding="0dp"
            android:textSize="12dp"
            android:background="@drawable/background_selector"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:text="GlÃºteos"
            android:layout_marginBottom="20dp"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <RadioButton
            android:id="@+id/rbPiernasMujer"
            android:checked="false"
            android:textSize="12dp"
            android:padding="0dp"
            android:background="@drawable/background_selector"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:text="Piernas"
            android:textColor="@drawable/genero_text_selector"
            android:drawableTint="@drawable/genero_text_selector"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
    </RadioGroup>

    <ImageView

        android:layout_width="191dp"
        android:layout_height="436dp" app:srcCompat="@drawable/mujer" android:id="@+id/imageMujer"
        android:layout_marginStart="24dp" app:layout_constraintStart_toEndOf="@+id/rdZonaMujer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"/>
    <Button
        android:background="@drawable/estilo_boton"
        android:id="@+id/btnSiguienteMetricasMujer"
        android:drawableRight="@drawable/ic_chevron_right"
        android:text="Siguiente"
        android:backgroundTint="#D0FD3E"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:layout_marginTop="468dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>